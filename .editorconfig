root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
insert_final_newline = true

# Use Tabs in Go code.
# This is consistant with go-fmt
[*.go]
indent_style = tab
indent_size = 4
charset = utf-8
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

# Matches the files that need 2 space size
[{*.json,*.yml,*.xml}]
indent_style = space
indent_size = 2
